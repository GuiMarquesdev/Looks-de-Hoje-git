// backend/tsconfig.json
{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist",
    // ðŸš¨ CORREÃ‡ÃƒO: Alterar rootDir para '.' para incluir arquivos na raiz do 'backend'
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    // ðŸš¨ CORREÃ‡ÃƒO ANTERIOR: Adicionar tipos do Node para resolver o erro 'process'
    "types": ["node"]
  },
  // ðŸš¨ CORREÃ‡ÃƒO ANTERIOR: Incluir 'generate_hash.ts'
  "include": ["src/**/*", "generate_hash.ts"],
  "exclude": ["node_modules", "dist"]
}
